<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sbm.demo.mapper.UserDao">

    <insert id="insert">
        insert into users(name,age) values(#{name},#{age})
    </insert>

    <update id="update">
        update users set name = #{name} , age = #{age} where id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from users where id = #{id}
    </delete>

    <!-- selectOne -->
    <select id="selectOne" parameterType="int" resultMap="RM_User">
      select
        u.id uid ,
        u.name uname ,
        u.age uage ,
        o.id oid ,
        o.orderno oorderno
      from users u
        left outer join orders o on u.id = o.uid
      where u.id = #{id}
    </select>

    <resultMap id="RM_User" type="com.sbm.demo.bean.User">
        <id property="id" column="uid" />
        <result property="name" column="uname" />
        <result property="age" column="uage" />
        <!-- 映射一对多关联关系 -->
        <collection property="orders" ofType="com.sbm.demo.bean.Order">
            <id property="id" column="oid" />
            <result property="orderNo" column="oorderno" />
        </collection>
    </resultMap>

    <!-- selectAll -->
    <select id="selectAll" resultMap="RM_User">
         select
        u.id uid ,
        u.name uname ,
        u.age uage ,
        o.id oid ,
        o.orderno oorderno
      from users u
        left outer join orders o on u.id = o.uid
    </select>

    <!-- selectPage 分页查询  没有做关联查询的用resultType，做关联查询的使用resultMap
    还有就是下面limit #{offset},#{limit}   必须使用offset和limit，因为需要与类中的属性相同-->
    <select id="selectPage" resultType="com.sbm.demo.bean.User">
      select
        *
      from users u limit #{offset},#{limit}
    </select>

    <!-- selectCount  查询表内数据的条数 -->
    <select id="selectCount" resultType="int">
      select
        count(1)
      from users u
    </select>

</mapper>